<AnchorPane prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.controller.HomeControllers.ForgotPasswordController">
   <ImageView fitHeight="487.0" fitWidth="699.0" layoutX="713.0" layoutY="217.0" pickOnBounds="true" preserveRatio="true">
      <image>
         <Image url="@../Images/round.png" />
      </image>
   </ImageView>

      <Label alignment="TOP_CENTER" layoutX="713.4000244140625" layoutY="109.4000015258789" prefHeight="99.0" prefWidth="458.0" style="-fx-font-size: 34px; -fx-font-weight: bold;" text="Reset Password" textFill="#2a40a8" wrapText="true" />
     <Label layoutX="713.4000244140625" layoutY="146.8000030517578" prefHeight="128.0" prefWidth="487.0" style="-fx-font-size: 20px;" text="Please enter your email and new password to reset your account password." textAlignment="CENTER" wrapText="true" />

      <Label layoutX="780.0" layoutY="331.0" prefHeight="27.0" prefWidth="419.0" style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Email :" />
      <TextField fx:id="emailField" layoutX="777.0" layoutY="366.0" onKeyReleased="#emailOnKeyRelease" onMousePressed="#emailClear" prefHeight="38.0" prefWidth="354.0" promptText="Enter your email" style="-fx-font-size: 14px; -fx-background-radius: 10;" />
      <Label fx:id="emailError" layoutX="713.4000244140625" layoutY="414.79998779296875" prefHeight="16.0" prefWidth="448.0" textFill="RED" />

