      <PasswordField fx:id="newPasswordField" layoutX="777.0" layoutY="465.0" prefHeight="38.0" prefWidth="354.0" promptText="New Password" style="-fx-font-size: 14px; -fx-background-radius: 10;" />

      <Button layoutX="880.0" layoutY="543.0" onAction="#handleResetPassword" prefHeight="37.0" prefWidth="148.0" style="-fx-background-color: #3ecd5e; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 60; -fx-border-width: 2;" text="Reset Password">
