              <Cursor fx:constant="HAND" />
          </cursor>
          <effect>
              <InnerShadow>
                  <color>
                      <Color opacity="0.03999999910593033" />
                  </color>
              </InnerShadow>
          </effect>
      <font>
         <Font size="16.0" />
      </font>
      </Button>
       <Button alignment="CENTER_RIGHT" layoutX="896.0" layoutY="581.0" onAction="#navigateToLogin" prefHeight="26.0" prefWidth="102.0" style="-fx-background-color: transparent; -fx-font-size: 12px; -fx-underline: true;" text="Back to Login" textAlignment="RIGHT" textFill="#1100ff">
           <cursor>
               <Cursor fx:constant="HAND" />
           </cursor>
       </Button>
</AnchorPane>
